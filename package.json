{
  "name": "mcpclient",
  "version": "1.0.0",
  "description": "Lightweight MCP client proxy for cloud-based MCP servers",
  "author": "MCP Client Team",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcpclient": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "electron": "electron dist/electron-main.js",
    "electron-dev": "npm run build && electron dist/electron-main.js",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "axios": "^1.7.7",
    "mongodb": "^6.19.0",
    "yargs": "^17.7.2",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.32",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "electron": "^38.1.0",
    "electron-builder": "^25.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "client",
    "mongodb",
    "cloud"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/deepak-s-2000/remote-mcp.git",
    "directory": "client"
  },
  "build": {
    "appId": "com.mcpclient.app",
    "productName": "MCP Client",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "dist/electron-main.js"
    },
    "publish": null,
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}